/* pages/Things/Things.wxss */

.page{
  height: 100%;
  font-family: 'PingFang SC', 'Helvetica Neue', Helvetica, 'Droid Sans Fallback', 'Microsoft Yahei', sans-serif;
  background:  #efefef;
}

.nav{
  position: relative;
  z-index: 98;
  height: 78rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  border-radius: 0px 0px 5px 5px;
}

.star{
  font-size: 12pt;
  padding: 0rpx 26rpx;
}

.complain{
  padding: 0rpx 26rpx;
  height: 40rpx;
  width: 40rpx;
}

.activity{
  margin-top: 8rpx;
  display: flex;
  flex-direction: row;
  background-color: #fff;
  border-radius: 0px;
}

.item-ayi{
  display: flex;
  flex-direction: row;
  background-color: #fff;
  margin-top: 10rpx;
}

.item-left{
  width: 20%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin: 10rpx;
}

.avatar{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.nickname{
  width:120rpx;
  height: 50rpx;
  font-size: 10pt;
  display: flex;
  justify-content: center;
  align-items: center;
}

.item-right{
  width: 80%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin: 10rpx;
}

.detail{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 14rpx;
}

.age, .sex, .origin, .realname, .distance, .skills, .totaltimes, .remarktimes{
  font-size: 9pt;
}

.item-skills{
  display: flex;
  flex-direction: row;
  justify-content: left;
  padding: 14rpx;
}

.map{
  position: relative;
  width: 100%;
  height: 360rpx;
  background-color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 10rpx;
}

.address{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  margin-top: 10rpx;
}

.addr-txt{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 60rpx;
  height: 60rpx;
  font-size: 10pt;
  padding: 0rpx 16rpx;
}

.addr-value{
  height: 60rpx;
  padding: 0rpx 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 10pt;
}

.addr-link{
  width: 60rpx;
  height: 60rpx;
  padding: 10rpx 16rpx;
}

.summary{
  display: flex;
  flex-direction: column;
  background-color: #fff;
  margin-top: 10rpx;
}

.gather{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.times, .score{
  width: 300rpx;
  height: 50rpx;
  font-size: 10pt;
  padding: 0rpx 8rpx;
  margin:16rpx 16rpx 0rpx 16rpx;
}

.times{
  display: block;
  text-align: left;
  justify-items: center;
}

.score{
  display: block;
  text-align: right;
  justify-items: center;
}

.tags{
  display: flex;
  flex-direction: row;
  float: left;
  flex-wrap: wrap;
}

.tag{
  width: 145rpx;
  height: 50rpx;
  margin: 8rpx 16rpx;
  border: 1rpx solid #efefef;
  font-size: 9pt;
  display: flex;
  justify-content: center;
  align-items: center;
}

.remarks{
  background-color: #fff;
  margin-top: 10rpx;
  margin-bottom: 100rpx;
}

.customer{
  height: 60rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.cust-left{
  display: flex;
  flex-direction: row;
  justify-content: left;
  align-items: center;
}

.cust-right{
  display: flex;
  flex-direction: row;
  justify-content: right;
  align-items: center;
}

.pic{
  width: 40rpx;
  height: 40rpx;
  padding: 0rpx 16rpx;
}

.name{
  font-size: 9pt;
  padding: 0rpx 16rpx;
}

.grade{
  font-size: 8pt;
  padding: 0rpx 16rpx;
  border: 1rpx solid #efefef;
  background-color: #4C4C4C;
  color: gold;
}

.points{
  width: 300rpx;
  height: 50rpx;
  font-size: 10pt;
  padding: 0rpx 8rpx;
  margin:16rpx 16rpx 0rpx 16rpx;
  display: block;
  text-align: right;
  justify-items: center;
}

.content{
  font-size: 8pt;
  padding: 0rpx 16rpx;
}

.photo{
  height: 120rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: left;
  align-items: center;
  margin: 0rpx 16rpx;
}

.pics{
  width: 100rpx;
  height: 100rpx;
  padding-left: 10rpx;
}


.item-line{
  position: relative;
  margin: 0rpx 14rpx 0rpx 14rpx;
  border-top: 4rpx dashed #efefef;
}

.item-line view{
  width: 28rpx;
  height: 28rpx;
  background: #efefef;
  border-radius: 50%;
  position: absolute;
  z-index: 98;
  top:-14rpx;
}

.item-line :first-child{
  left: -28rpx;
}

.item-line :last-child{
  right: -28rpx;
}

.tips{
  font-size: 12pt;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 10rpx;
}

.next{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  z-index: 99;
  margin: 10rpx 0rpx 0rpx 0rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  background-color: #fff;
}

.save, .book{
  width: 49%;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #333333;
  color: #fff;
}

.save{
  margin: 0rpx 2rpx 0rpx 0rpx;
}

.book{
  margin: 0rpx 0rpx 0rpx 2rpx;
}