<!--pages/Login/Login.wxml-->
<view class='page'>
  <view class="input">
    <input value='{{account}}' bindblur="onGetAccount" type="number" maxlength="11" placeholder="{{accountPhold}}" />
  </view>
  <view class="input">
    <input value='{{password}}' bindblur="onGetPassword" type="password" maxlength="20" placeholder="{{passwordPhold}}" />
  </view>
  <view class='buttons'>
    <view class="login" bindtap="onLogin">登录</view>
    <view class="register" bindtap="onRegister">注册</view>
  </view>
</view>